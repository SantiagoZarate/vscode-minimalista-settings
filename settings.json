{
  "symbols.hidesExplorerArrows": false,
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  // "editor.rulers": [
  //   80
  // ],
  "editor.minimap.maxColumn": 60,
  "editor.minimap.renderCharacters": false,
  "editor.renderLineHighlight": "gutter",
  "workbench.editor.labelFormat": "short",
  "explorer.compactFolders": false,
  "editor.semanticHighlighting.enabled": false,
  "workbench.activityBar.location": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "workbench.statusBar.visible": false,
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
  },
  "apc.header": {
    "height": 36
  },
  "apc.listRow": {
    "height": 24
  },
  "apc.stylesheet": {
    ".title-label > h2": "display  : none;",
    ".editor-actions": "display : none;",
    ".pane-header": "padding : 0px 8px",
    ".actions-container": "justify-content: flex-start !important;",
    // SACANDO BORDES MANUALMENTE
    ".monaco-workbench .part" : "border-right: none!important",
    ".monaco-workbench .part.editor>.content .editor-group-container>.title>.tabs-and-actions-container" : "--tabs-border-bottom-color: transparent!important",
    ".monaco-workbench .part.titlebar" : "border-bottom : none!important"
  },
  "workbench.layoutControl.enabled": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-lock*, package-lock*, bun.lock*",
    "tailwind.config*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env*": ".env*"
  },
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.iconTheme": "symbols",
  "window.zoomLevel": -1,
  "git.openRepositoryInParentFolders": "never",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.linkedEditing": true,
  "terminal.integrated.env.windows": {},
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "indentRainbow.lightIndicatorStyleLineWidth": 6,
  "indentRainbow.colorOnWhiteSpaceOnly": true,
  "workbench.tree.enableStickyScroll": true,
  "editor.stickyScroll.enabled": true,
  // Class Variance Autority - tailwindcss intellisense
  "tailwindCSS.experimental.classRegex": [
    [
      "cva\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "cx\\(([^)]*)\\)",
      "(?:'|\"|`)([^']*)(?:'|\"|`)"
    ]
  ],
  "editor.minimap.enabled": false
}
